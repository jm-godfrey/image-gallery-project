%div.justify-content-center.align-items-center.gx-0
  %h1 Public Galleries

  .row.mt-4
    - if @galleries.present?
      - @galleries.each do |gallery|
        .col-md-4.mb-3
          %div
            %h2= link_to gallery.title, gallery_path(gallery)
            %p= gallery.description
            %p.text-muted
              by #{gallery.user.username}
    - else
      %p No galleries available.
